	});

	$('#item_cancel').click(function(e){
		displayNode('{{node._id}}');
		$('.project-mode-view').show();
		$('.project-mode-edit').hide();
	});

	$('#file_delete').click(function(e){
		e.preventDefault();
		var file_field = $('#picture');
		deleteFile(file_field);
		$('.node-preview-thumbnail').hide();
	});

