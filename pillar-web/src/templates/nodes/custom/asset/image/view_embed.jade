| {% block body %}

#node-container
	| {% cache 3600, 'asset_view', node._id %}
	| {% if node.picture %}
	section.node-preview.image
		img.node-preview-thumbnail(src="{{ node.picture.thumbnail('l', api=api) }}")
	| {% endif %}


	section.node-details-container.image

		.node-details-header
			.node-title
				| {{node.name}}

		.node-details-description
			| {{node.description}}

		.node-details-meta

			ul.node-details-meta-list
				li.node-details-meta-list-item.status
						| {{node.properties.status}}

				li.node-details-meta-list-item.date(title="Created {{ node._created | pretty_date }}")
					| {{ node._updated | pretty_date }}

				li.node-details-meta-list-item.type
					| {{ node.properties.content_type }}

				li.node-details-meta-list-item.image.length
					| {{ node.file.length | filesizeformat }}

				li.node-details-meta-list-item.image.download
					a(href="{{ node.file.link }}")
						button.btn.btn-default(type="button")
							| Download

		#comments-container
			#comments-list-items-loading
				i.pi-spin
		| {% endcache %}

include ../../_scripts

| {% endblock %}

| {% block footer_scripts %}
script.
	if ($('.node-preview-thumbnail').width() > 750) {
		$('.node-preview, .node-preview-thumbnail').css({'max-height': '100%', 'width': '100%'});
	}
| {% endblock %}

