| {% extends 'layout.html' %}

| {% block page_title %}{{user.name}}{% endblock%}

| {% block body %}

#project_container

	#node_index-container

		#node_index-header
			#node_index-user-avatar
				img(src="http://placehold.it/90x90")
			#node_index-user-info
				.node_index-user-name {{user.name}}
				.node_index-user-description {{user.description}}

		#node_index-list-container
			.node_index-list
				| {% for project in projects %}

				.node_index-list-item

					a.item-image(
						href="{{ url_for('project_view', project_url=project.properties.url) }}")
						img(src="{{ project.properties.picture_square.thumbnail('s', api=api) }}")

					.item-info

						a.item-title(
							href="{{ url_for('project_view', project_url=project.properties.url) }}")
							| {{project.name}}

						p.item-description
							| {{project.properties.summary|safe}}

				| {% endfor %}

| {% endblock %}
