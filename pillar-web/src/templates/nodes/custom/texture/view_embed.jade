#node-container.texture
	| {% for f in node.properties.files %}
	section.node-row
		section.node-preview.texture
			img.node-preview-thumbnail(
				src="{{ f.file.thumbnail('m', api=api) }}",
				data-preview="{{ f.file.thumbnail('l', api=api) }}",
				data-aspect_ratio="{{ node.properties.aspect_ratio }}")


		section.node-details-container.texture

			.node-details-header
				.node-title
					| {{f.file.filename}}

			.node-details-attributes
				span.sizes
					| {{ f.file.width }}
					small x
					| {{ f.file.height }}

				span.extra.
					{% if f.is_tileable %}
						<i class="pi-puzzle"></i> Seamless
					{% else %}
						Not Seamless
					{% endif %}

				span.variations
					span.
						{% if f.map_type == 'col' %}
						Color
						{% elif f.map_type == 'bump' %}
						Bump
						{% elif f.map_type == 'spec' %}
						Specular
						{% elif f.map_type == 'nor' %}
						Normal Map
						{% elif f.map_type == 'translucency' %}
						Translucency
						{% elif f.map_type == 'emission' %}
						Emission
						{% elif f.map_type == 'alpha' %}
						Alpha
						{% endif %}




			.node-details-meta
				ul.node-details-meta-list
					li.node-details-meta-list-item.type
						| {{ f.file.content_type }}

					li.node-details-meta-list-item.image.length
						| {{ f.file.length | filesizeformat }}

					li.node-details-meta-list-item.image.download
						| {% if f.file.link %}
						a(href="{{ f.file.link }}")
							button.btn.btn-default(type="button")
								| Download Texture
						| {% else %}
						a(href="#")
							button.btn.btn-default.disabled(type="button")
								| Download Texture
						| {% endif %}
	| {% endfor %}


