#node-container.texture
	| {% for f in node.properties.files %}
	section.node-row
		section.node-preview.texture
			img.node-preview-thumbnail(
				src="{{ f.file.thumbnail('m', api=api) }}",
				data-high_res="{{ f.file.thumbnail('l', api=api) }}")


		section.node-details-container.texture

			.node-details-header
				.node-title
					| {{f.file.filename}}

			.node-details-attributes
				span.sizes
					| {{ f.file.width }}
					small x
					| {{ f.file.height }}

				span.variations
					span Color

				span.extra
					i.pi-puzzle
					| Seamless


			.node-details-meta
				ul.node-details-meta-list
					li.node-details-meta-list-item.type
						| {{ f.file.content_type }}

					li.node-details-meta-list-item.image.length
						| {{ f.file.length | filesizeformat }}

					li.node-details-meta-list-item.image.download
						| {% if f.file.link %}
						a(href="{{ f.file.link }}")
							button.btn.btn-default(type="button")
								| Download Texture
						| {% else %}
						a(href="#")
							button.btn.btn-default.disabled(type="button")
								| Download Texture
						| {% endif %}
	| {% endfor %}

	#comments-container.texture
		#comments-list-items-loading
			i.pi-spin

