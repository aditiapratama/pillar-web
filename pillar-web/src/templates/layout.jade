							li
								a.navbar-item(
									href="/open-projects",
									title="Browse all the Open Projects",
									data-toggle="tooltip",
									data-placement="bottom",
									class="{% if category in ['open-projects', 'film']: %}active{% endif %}")
									span Open Projects

							| {% if current_user.is_anonymous() %}
