doctype
html(lang="en")
	head
		meta(charset="utf-8")
		title {% block page_title %}Home{% endblock %} - Blender Cloud
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description", content="Blender Cloud is a web based service developed by Blender Institute that allows people to access the training videos and all the data from the past open projects.")
		meta(name="author", content="Blender Institute")
		meta(name="theme-color", content="#3e92aa")

		meta(property="og:site_name", content="Blender Cloud")
		| {% block og %}
		meta(property="og:title", content="Blender Cloud")
		meta(property="og:url", content="https://cloud.blender.org")
		meta(property="og:type", content="website")
		meta(property="og:image", content="{{ url_for('static', filename='assets/img/background_join_glass.jpg')}}")
		| {% endblock %}

		| {% block tw %}
		meta(name="twitter:card", content="summary_large_image")
		meta(name="twitter:site", content="@Blender_Cloud")
		meta(name="twitter:title", content="Blender Cloud")
		meta(name="twitter:description", content="Blender Cloud is a web based service developed by Blender Institute that allows people to access the training videos and all the data from the past open projects.")
		meta(name="twitter:image", content="{{ url_for('static', filename='assets/img/background_join_glass.jpg')}}")
		| {% endblock %}

		script.
			!function(e){"use strict";e.loadCSS=function(t,n,o){var r,i=e.document,l=i.createElement("link");if(n)r=n;else{var d=(i.body||i.getElementsByTagName("head")[0]).childNodes;r=d[d.length-1]}var a=i.styleSheets;l.rel="stylesheet",l.href=t,l.media="only x",r.parentNode.insertBefore(l,n?r:r.nextSibling);var f=function(e){for(var t=l.href,n=a.length;n--;)if(a[n].href===t)return e();setTimeout(function(){f(e)})};return l.onloadcssdefined=f,f(function(){l.media=o||"all"}),l},"undefined"!=typeof module&&(module.exports=e.loadCSS)}(this);

			loadCSS( "//fonts.googleapis.com/css?family=Roboto:300,400,500" );
			loadCSS( "//fonts.googleapis.com/css?family=Lato:300,400" );

		link(href="{{ url_for('static', filename='assets/ico/favicon.png') }}", rel="shortcut icon")
		link(href="{{ url_for('static', filename='assets/ico/apple-touch-icon-precomposed.png') }}", rel="icon apple-touch-icon-precomposed", sizes="192x192")

		link(href="{{ url_for('static', filename='assets/css/bootstrap.min.css') }}", rel="stylesheet")

		| {% block head %}{% endblock %}

		link(href="{{ url_for('static', filename='assets/css/main.css') }}", rel="stylesheet")

	body.transition-none

		.container-page
			a(name="hop")
			header.navbar-backdrop-container
				| {% block header_backdrop %}
				.navbar-backdrop
				.navbar-backdrop-overlay
				| {% endblock %}

			| {% with messages = get_flashed_messages(with_categories=True) %}
			|		{% if messages %}

			|	{% for (category, message) in messages %}
			.alert(role="alert", class="alert-{{ category }}")
				i.alert-icon(class="{{ category }}")
				span {{ message }}
				button.close(type="button", data-dismiss="alert")
					i.pi-cancel
			|	{% endfor %}

			|		{% endif %}
			| {% endwith %}

			nav.navbar.navbar-transparent.navbar-fixed-top(role="navigation")
				.navbar-overlay

				.navbar-container
					header.navbar-header
						button.navbar-toggle(data-target=".navbar-collapse", data-toggle="collapse", type="button")
							span.sr-only Toggle navigation
							i.pi-menu
						a.navbar-brand(
							href="/",
							title="Blender Cloud")
							span.app-logo
								i.pi-blender-cloud-logo

					nav.collapse.navbar-collapse
						ul.nav.navbar-nav.navbar-right
							| {% if node and node.properties and node.properties.category %}
							| {% set category = node.properties.category %}
							| {% else %}
							| {% set category = title %}
							| {% endif %}
							li
								a(href="{{ url_for('main_blog') }}",
									title="Blender Cloud Blog")
									span Blog
							li
								a(href="/p/gallery",
									title="Curated artwork collection",
									class="{% if category == 'assets': %}active{% endif %}")
									span Art Gallery
							li
								a(href="/training",
									title="Browse Training and Tutorials",
									class="{% if category == 'training': %}active{% endif %}")
									span Training
							li
								a(href="/open-projects",
									title="Browse Open Projects",
									class="{% if category in ['open-projects', 'film']: %}active{% endif %}")
									span Open Projects

							| {% if current_user.is_anonymous() %}
							li
								a(href="https://blender.org/id/register",
									title="Register") Register
							| {% endif %}


							| {% if current_user.is_authenticated() %}

							li(class="dropdown{% if title in ['profile', 'billing-address', 'pledges', 'manage-collection']: %} active{% endif %}")
								a.dropdown-toggle(href="#", data-toggle="dropdown", title="{{ current_user.email }}")
									img.gravatar(src="{{ current_user.gravatar }}")

								ul.dropdown-menu
									| {# {% if current_user.has_role('admin') %}
									li
										a(href="#",
											title="Whoosh!")
											i.pi-whoosh
											| Whoosh!
									| {% endif %} #}

									li
										a(href="{{url_for('users.settings_profile')}}"
											title="Settings")
											i.pi-cog
											| Settings
									li.divider(role="separator")
									li
										a(href="{{ url_for('users.logout') }}")
											i.pi-log-out(title="Log Out")
											| Log out

							| {% else %}

							li.nav-item-sign-in
								a(href="{{ url_for('users.login') }}")
									i.pi-log-in(title="Sign In")
									|  Sign In
							| {% endif %}

			.page-content
				| {% block body %}{% endblock %}

		| {% block footer_container %}
		#footer-container
			| {% block footer_navigation %}
			#footer-navigation
				.container
					.row
						.col-md-4.col-xs-6
							.footer-support
								h4 Support & Feedback
								p.
									Let us know what you think or if you have any issues
									just write to cloudsupport at blender dot org

						.col-md-2.col-xs-6
							ul.footer-social
								a(href="https://twitter.com/Blender_Cloud",
									title="Follow us on Twitter")
									li
										i.pi-social-twitter
								a(href="mailto:cloudsupport@blender.org"
									title="Support Email")
									li
										i.pi-email-outline

						.col-md-2.col-xs-6
							h4 Blender Cloud
							ul.footer-links
								a(href="{{ url_for('homepage') }}",
									title="Blender Cloud Home")
									li Home

								a(href="{{ url_for('main_blog') }}",
									title="Blender Cloud Blog")
									li Blog

								a(href="http://wiki.blender.org/index.php/Org:Institute/BlenderCloud",
									title="About Blender Cloud")
									li About

						.col-md-2.col-xs-6
							h4 Blender
							ul.footer-links
								a(href="https://www.blender.org",
									title="Blender Official Website")
									li Blender.org

								a(href="https://www.blender.org/store",
									title="The Official Blender Store")
									li Blender Store

								a(href="https://www.blendernetwork.org",
									title="The Network of Blender Professionals")
									li Blender Network

						.col-md-2.col-xs-6.special
							| With the support of the <br/> MEDIA Programme of the European Union<br/><br/>
							img(src="https://gooseberry.blender.org/wp-content/uploads/2014/01/media_programme.png")
			| {% endblock %}

			| {% block footer %}
			footer.container

				//
					ul.links
						li
							a(href="{# XXX {{url_for('terms_and_conditions')}} #}")
								| Terms & Services, Cancellation
						li
							a(href="{# XXX {{url_for('privacy')}} #}")
								| Privacy Policy

				span.credits
					| Blender Cloud
					a.hop(href="#hop")
						i.pi-angle-up
			| {% endblock %}
		| {% endblock %}

		noscript
			link(href='//fonts.googleapis.com/css?family=Roboto:300,400,500', rel='stylesheet', type='text/css')
			link(href='//fonts.googleapis.com/css?family=Lato:300,400', rel='stylesheet', type='text/css')

		script(type="text/javascript", src="//code.jquery.com/jquery-2.1.4.min.js")
		script(type="text/javascript", src="{{ url_for('static', filename='assets/js/bootstrap.js') }}")
		script(type="text/javascript", src="//cdnjs.cloudflare.com/ajax/libs/jquery.perfect-scrollbar/0.6.7/js/min/perfect-scrollbar.min.js")
		script(type="text/javascript", src="//cdnjs.cloudflare.com/ajax/libs/js-cookie/2.0.3/js.cookie.min.js",)
		script(type="text/javascript", src="//cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.3/handlebars.min.js")
		script(type="text/javascript", src="{{ url_for('static', filename='assets/js/markdown.min.js') }}")
		script(type="text/javascript", src="{{ url_for('static', filename='assets/js/tutti.min.js') }}")

